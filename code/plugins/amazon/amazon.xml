<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="payment" method="upgrade">
  <name>Payment - Amazon</name>
  <author>Techjoomla</author>
  <creationDate>jan 2015</creationDate>
  <copyright />
  <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
  <authorEmail />
  <authorUrl />
  <version>2.1</version>
  <description>Amazon payment plugin for jticketing</description>
  <files>
    <filename plugin="amazon">amazon.php</filename>
    <folder>amazon</folder>
  </files>
  <languages>
    <language tag="en-GB">en-GB/en-GB.plg_payment_amazon.ini</language>
  </languages>
  <!-- Fields for Joomla 1.6.x and onwards -->
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="accesskey" type="text" default="" label="AMAZON_ACCESSKEY" description="AMAZON_ACCESSKEY_DESC" />
        <field name="secretkey" type="text" default="" label="AMAZON_SECRETKEY" description="AMAZON_SECRETKEY_DESC" />
        <field name="sandbox" type="radio" default="0" label="AMAZON_SANDBOX" description="AMAZON_SANDBOX_DESC">
          <option value="0">NO</option>
          <option value="1">YES</option>
        </field>
		<field name="log_write" type="radio" default="0" label="PLG_AMAZON_WRITE_LOG"	description="PLG_AMAZON_WRITE_LOG_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</field>
        <field name="plugin_name" type="text" default="Amazon" label="PLG_NAME" description="" />
        <field name="plugin_hidname" type="hidden" default="amazon" />
      </fieldset>
    </fields>
  </config>
</extension>
