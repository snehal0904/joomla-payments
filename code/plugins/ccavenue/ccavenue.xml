<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="payment" method="upgrade">
	<name>Payment - Ccavenue</name>
	<author>Techjoomla</author>
	<creationDate>14th Mar 2014</creationDate>
	<copyright></copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail></authorEmail>
	<authorUrl></authorUrl>
	<version>2.0.1</version>
	<description>Ccavenue payment plugin</description>
	<files>
		<filename plugin="ccavenue">ccavenue.php</filename>
		<folder>ccavenue</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB/en-GB.plg_payment_ccavenue.ini</language>
	</languages>


		<params>
		<param name="plugin_name" type="text" default="CCAvenue" label="Plugin Label" description="Plugin name appears at frontend"/>
  		<param name="merchant_id" type="text" default="" label="PLG_CCAVENUE_MERCHANT_ID" description="PLG_CCAVENUE_MERCHANT_ID_DESC"/>
  		<param name="working_key" type="text" default="" label="PLG_CCAVENUE_WORKING_KEY" description="PLG_CCAVENUE_WORKING_KEY_DESC"/>
  		<param name="access_code" type="text" default="" label="PLG_CCAVENUE_ACCESS_KEY" description="PLG_CCAVENUE_ACCESS_KEY_DESC"/>
  		<param name="sandbox_working_key" type="text" default="" label="PLG_CCAVENUE_SANDBOX_WORKING_KEY" description="PLG_CCAVENUE_SANDBOX_WORKING_KEY_DESC"/>
  		<param name="sandbox_access_code" type="text" default="" label="PLG_CCAVENUE_SANDBOX_ACCESS_KEY" description="PLG_CCAVENUE_SANDBOX_ACCESS_KEY_DESC"/>
		<param name="plugin_hidname" type="hidden" default="ccavenue" />
  		<param type="spacer" />

	</params>

	<!-- Fields for Joomla 1.6.x and onwards -->
 	<config>
		<fields name="params">
			<fieldset name="basic">
					<field name="merchant_id" type="text" default="" label="PLG_CCAVENUE_MERCHANT_ID" description="PLG_CCAVENUE_MERCHANT_ID_DESC"/>
			  		<field name="working_key" type="text" default="" label="PLG_CCAVENUE_WORKING_KEY" description="PLG_CCAVENUE_WORKING_KEY_DESC"/>
			  		<field name="access_code" type="text" default="" label="PLG_CCAVENUE_ACCESS_KEY" description="PLG_CCAVENUE_ACCESS_KEY_DESC"/>
					<field name="plugin_name" type="text" default="CCAvenue" label="Plugin Label" description="Plugin name appears at frontend"/>
					<field name="log_write" type="radio" default="0" label="PLG_AUTHONET_WRITE_LOG"	description="PLG_AUTHONET_WRITE_LOG_DESC">
							<option value="0">JNO</option>
							<option value="1">JYES</option>
					</field>
					<field name="sandbox" type="radio" default="0" label="PLG_CCAVENUE_SANDBOX" description="PLG_CCAVENUE_SANDBOX_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
					</field>
			  		<field name="sandbox_working_key" type="text" default="" label="PLG_CCAVENUE_SANDBOX_WORKING_KEY" description="PLG_CCAVENUE_SANDBOX_WORKING_KEY_DESC"/>
			  		<field name="sandbox_access_code" type="text" default="" label="PLG_CCAVENUE_SANDBOX_ACCESS_KEY" description="PLG_CCAVENUE_SANDBOX_ACCESS_KEY_DESC"/>
					<field name="plugin_hidname" type="hidden" default="ccavenue" />
				</fieldset>
		</fields>
	</config>
</extension>
