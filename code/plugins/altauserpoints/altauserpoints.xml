<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="payment" method="upgrade">
	<name>Payment - Altauser Points</name>
	<author>TechJoomla</author>
	<copyright>Techjoomla. All Rights Reserved.</copyright>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>http://www.techjoomla.com</authorUrl>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<creationDate>14th Mar 2018</creationDate>
	<version>1.0</version>
	<description>Altauserpoints payment plugin</description>
	<files>
		<filename plugin="altauserpoints">altauserpoints.php</filename>
		<folder>altauserpoints</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB/en-GB.plg_payment_altauserpoints.ini</language>
		<language tag="it-IT">it-IT/it-IT.plg_payment_altauserpoints.ini</language>
		<language tag="de-DE">de-DE/de-DE.plg_payment_altauserpoints.ini</language>
		<language tag="es-ES">es-ES/es-ES.plg_payment_altauserpoints.ini</language>
		<language tag="sv-SE">sv-SE/sv-SE.plg_payment_altauserpoints.ini</language>
		<language tag="nl-NL">nl-NL/nl-NL.plg_payment_altauserpoints.ini</language>
		<language tag="da-DK">da-DK/da-DK.plg_payment_altauserpoints.ini</language>
		<language tag="th-TH">th-TH/th-TH.plg_payment_altauserpoints.ini</language>
		<language tag="pt-PT">pt-PT/pt-PT.plg_payment_altauserpoints.ini</language>
	</languages>
	<config name="params">
		<fields name="params">
			<fieldset name="basic" label="Plugin Parameters" addfieldpath="/plugins/payment/altauserpoints/altauserpoints/element">
				<field name="conversion" type="text" size="10" default="10" label="CON_AMT" description="CON_AMT_DESC" />
				<field name="points" type="hidden" default="point" />
				<field name="aupfilesocialads" type="aupfilesocialads" label="AUP_FILE_SA" description="DESC_AUP_FILE" />
				<field name="aupfilequick2cart" type="aupfilequick2cart" label="PLG_PAYMENT_ALTAUSERPOINTS_QUICK2CART" description="PLG_PAYMENT_ALTAUSERPOINTS_QUICK2CART_LINK" />
				<field name="aupfilesjticketing" type="aupfilesjticketing" label="AUP_FILE_JT" description="DESC_AUP_FILE" />
				<field name="log_write" type="radio" default="0" label="PLG_APOINT_WRITE_LOG" description="PLG_APOINT_WRITE_LOG_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="plugin_name" type="text" default="Altauser Points" label="PLG_NAME" description="" />
				<field name="plugin_hidname" type="hidden" default="altauserpoints" />
			</fieldset>
		</fields>
	</config>
</extension>
