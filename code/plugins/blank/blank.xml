<?xml version="1.1" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="payment" method="upgrade">
	<name>Blank Payment Gateway</name>
	<author>TechJoomla</author>
	<creationDate>25th Sep 2013</creationDate>
	<copyright>Techjoomla. All Rights Reserved.</copyright>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>http://www.techjoomla.com</authorUrl>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.1</version>
	<description>PayBy check plugin from Techjoomla. </description>
	<files>
		<filename plugin="blank">blank.php</filename>
				<folder>blank</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB/en-GB.plg_payment_blank.ini</language>
	</languages>
	<!-- parameters for Joomla 1.5.x -->
	<params>
		<param name="plugin_name" type="text" default="PayBy Check" label="PLG_NAME" description="" />
		<param name="plugin_mail" type="textarea" default="" label="PLG_MAIL" description="PLG_MAIL_DES" rows="5" cols="20"  />
	</params>
	<!-- Fields for Joomla 1.6.x and onwards -->
	<config name="params">
		<fields name="params">
			<fieldset name="basic">
					<field name="plugin_name" type="text" default="PayBy Blank" label="PLG_NAME" description="" />
					<field name="plugin_mail" type="textarea" default="" label="PLG_MAIL" description="PLG_MAIL_DES" rows="5" cols="20"  />
					<field name="log_write" type="radio" default="0" label="PLG_BLANK_WRITE_LOG"	description="PLG_BLANK_WRITE_LOG_DESC">
						<option value="0">NO</option>
						<option value="1">YES</option>
					</field>
			</fieldset>
		</fields>
	</config>
</extension>
